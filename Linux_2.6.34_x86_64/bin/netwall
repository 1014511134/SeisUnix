#! /bin/sh
# netwall - NETwork version of Write ALL users
# Author: craig

#machines="cauchy dix dobrin ewing green gu heiland hilbert huygens jeffries keller klein kramer lamb lewis love mintrop rayleigh sengbush sheriff shrock slotnick sonya ulam wenzel"

machines=`niutil -list / /machines | awk '{print $2}' | sed -e '/timna/d' -e '/csm-gw/d'`

echo "Your message will be displayed on the following hosts:"
echo $machines
echo
echo "Type your message now, followed by <CTRL>-D on a blank line:"
/usr/etc/rwall $machines
