#! /bin/sh
# chuid - change uids
# usage - chuid rootdir olduid newuid

if [ `whoami` != root ]
then
	echo "chuid: Must be run as root!" 1>&2
	exit 1
fi

case $# in
3)	# OK
	find $1 -user $2 -print | xargs chown $3
;;
*)	# ERROR
	echo "usage: chuid rootdir olduid newuid" 1>&2
	exit 1
;;
esac
exit 0
